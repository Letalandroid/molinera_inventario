# Etapa 1: Build
FROM node:18-alpine AS build

WORKDIR /app

# Copiar package.json y lockfile para instalar deps
COPY package.json pnpm-lock.yaml* ./

# Instalar pnpm global y deps
RUN npm install -g pnpm
RUN pnpm install

# Copiar todo el c칩digo fuente
COPY . .

# Construir la app para producci칩n
RUN pnpm run build

# Etapa 2: Servir la app est치tica con nginx
FROM nginx:alpine

# Copiar los archivos build de la etapa anterior al directorio nginx
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Copiar configuraci칩n nginx si quieres (opcional)
# COPY nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
